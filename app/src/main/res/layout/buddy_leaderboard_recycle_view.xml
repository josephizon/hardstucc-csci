<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/task_container_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:padding="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center" >

            <TextView
                android:id="@+id/leader_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/epilogue_black"
                android:text="Rank 1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/blue"/>

            <ImageView
                android:id="@+id/leader_profile_icon"
                android:layout_width="60dp"
                android:layout_height="70dp"
                />

            </LinearLayout>


            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">





                <TextView
                    android:id="@+id/leader_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/epilogue_black"
                    android:text="Name of Student"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/lavender"/>

                <TextView
                    android:id="@+id/leader_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="BP Level 10"
                    android:textSize="10sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/leader_collectible_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rewards_collectible_14"/>

                <ImageView
                    android:id="@+id/leader_collectible_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rewards_collectible_14"/>

                <ImageView
                    android:id="@+id/leader_collectible_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rewards_collectible_14"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/leader_badge_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/badges_level_2"/>

                <ImageView
                    android:id="@+id/leader_badge_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/badges_level_2"/>

                <ImageView
                    android:id="@+id/leader_badge_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/badges_level_2"/>


            </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>